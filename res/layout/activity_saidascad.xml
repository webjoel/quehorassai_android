<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content">

	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
    
	    <TextView
			android:id="@+id/labelTitulo"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:text="@string/saida"
			android:textSize="16sp"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_gravity="right" />
	    
	    <TextView android:id="@+id/labelLinha"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Linha:"
            android:textStyle="bold" />
    
	    <Spinner
		    android:id="@+id/linha"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
	    
	    <TextView android:id="@+id/labelOrigem"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:text="Origem:"
            android:textStyle="bold" />
	    
	    <Spinner
		    android:id="@+id/origem"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
	    
	    <TextView android:id="@+id/labelHorario"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Horário:"
            android:textStyle="bold" />
    
    	<EditText android:id="@+id/horario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Spinner" 
    		android:onClick="showTimePickerDialog" />
    	
    	<TextView
			android:id="@+id/labelTipoHorario"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:text="Tipo do Horário:"
            android:textStyle="bold" />
		
		<CheckBox
			android:id="@+id/semana"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Semana"
			android:checked="false" />
		
		<CheckBox
			android:id="@+id/sabado"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Sábado"
			android:checked="false" />
		
		<CheckBox
			android:id="@+id/domingo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Domingo"
			android:checked="false" />
		
		<CheckBox
			android:id="@+id/feriado"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Feriado"
			android:checked="false"
			android:enabled="false" />
	
	</LinearLayout>

</ScrollView>